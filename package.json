{
  "name": "dev-mate-cli",
  "version": "0.1.0",
  "description": "command line tool using LLMs for code documentation",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --quiet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mayank-Pareek/dev-mate-cli.git"
  },
  "keywords": [
    "cli"
  ],
  "author": "Mayank Kumar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mayank-Pareek/dev-mate-cli/issues"
  },
  "homepage": "https://github.com/mayank-Pareek/dev-mate-cli#readme",
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "dotenv": "^16.4.5",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "openai": "^4.58.2",
    "toml": "^3.0.0"
  }
}
